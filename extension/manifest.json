{
  "manifest_version": 3,
  "name": "LLMFeeder",
  "version": "1.0.0",
  "description": "Convert web pages to clean Markdown and copy to clipboard for LLM consumption",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/readability.js", "libs/turndown.js", "content.js"]
    }
  ]
} 